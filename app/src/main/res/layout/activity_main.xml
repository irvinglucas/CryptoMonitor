<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_string_size"
        android:textAlignment="center"
        android:text="@string/title"/>

    <LinearLayout
        android:id="@+id/card_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/portrait_layout_height"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/portrait_layout_margin_top"
        android:layout_marginLeft="@dimen/portrait_layout_margin_sides"
        android:layout_marginRight="@dimen/portrait_layout_margin_sides">

        <ImageView
            android:id="@+id/coin_symbol_1"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/coin_value_1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="@string/default_money_value_text"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/portrait_layout_height"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/portrait_layout_margin_top"
        android:layout_marginLeft="@dimen/portrait_layout_margin_sides"
        android:layout_marginRight="@dimen/portrait_layout_margin_sides">

        <ImageView
            android:id="@+id/coin_symbol_2"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/coin_value_2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="@string/default_money_value_text"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/portrait_layout_height"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/portrait_layout_margin_top"
        android:layout_marginLeft="@dimen/portrait_layout_margin_sides"
        android:layout_marginRight="@dimen/portrait_layout_margin_sides">

        <ImageView
            android:id="@+id/coin_symbol_3"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/coin_value_3"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="@string/default_money_value_text"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/portrait_layout_height"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/portrait_layout_margin_top"
        android:layout_marginLeft="@dimen/portrait_layout_margin_sides"
        android:layout_marginRight="@dimen/portrait_layout_margin_sides">

        <ImageView
            android:id="@+id/coin_symbol_4"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/coin_value_4"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="@string/default_money_value_text"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_5"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginLeft="@dimen/portrait_layout_margin_sides"
        android:layout_marginTop="30sp"
        android:layout_marginRight="@dimen/portrait_layout_margin_sides"
        android:orientation="vertical">

        <TextView
            android:id="@+id/last_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_timestamp_string_size"
            android:text="@string/default_timestamp_value"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/portrait_layout_margin_sides"
            android:layout_marginRight="@dimen/portrait_layout_margin_sides"/>

        <Button
            android:id="@+id/button_1"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="@dimen/portrait_layout_margin_sides"
            android:layout_marginTop="20sp"
            android:layout_marginRight="@dimen/portrait_layout_margin_sides"
            android:text="@string/default_button_text" />

    </LinearLayout>

</LinearLayout>